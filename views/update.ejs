<div class="row">
    <div class="col-sm-8">
        <%- include ("./partials/messages"); %>
        <% if (typeof user!='undefined' ) { %>
        <p><%=user.username %></p>
        <% } %>
        <form action="/blog/updateprofile" method="POST" id="myform">
            <fieldset>
                <legend>Update</legend>
                <div class="form-group">

                    <label for="exampleInputPassword1" class="form-label mt-4">UserName</label>&nbsp;

                    <input type="text" class="form-control" id="newname" name="newname" placeholder="UserName"
                        value="<%= typeof newname != 'undefined' ? newname : '' %>">

                </div>
                <br>
                <div class="col-sm-4">
                    <button class="btn btn-primary btn-sm" type="submit" value="submit">Update</button>
                </div>
            </fieldset>
        </form>
        <% if (typeof errors!='undefined' ) { %>
            <p><%=errors %></p>
            <% } %>
    </div>
</div>